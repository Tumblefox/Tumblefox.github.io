<div>
  {% for project in projects %}
    {% if not project.exclude %}
    <div class="container{{ ' border-separation-bottom' if loop.index < loop.length }}">

      <div class="pure-g">
        <div class="pure-u-1 pure-u-lg-1-4">
          <div class="container">
            <a href="{{ project.url }}" target="_blank">
              <img class="thumbnail border-thin-selectable" alt="{{ project.title }}" src="static/images/gallery/{{ project.image }}">
            </a>
          </div>
        </div>
        <div class="pure-u-1 pure-u-lg-3-4">
          <div class="container">
            <h4>
              <a class="text-white" href="{{ project.url }}" target="_blank">{{ project.title }}</a>
            </h4>

            {% if project.startDate %}
              <small>Began {{ project.startDate }}</small>
            {% endif %}

            <p>{{ project.description }}</p>
          </div>
        </div>
      </div>

    </div>
    {% endif %}
  {% endfor %}
</div>
