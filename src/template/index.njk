{% block main %}
  <section class="intro-card text-center">
    <h1>
      <span>Ajee Sieka</span>
    </h1>
    <p>
      <span>Developer Portfolio</span>
    </p>
  </section>

  <article>
    <section id="about" class="emphasis-paragraph container">
      <h4 class="section-header">
        <span>About</span>
      </h4>

      <p>
        As a Bellarmine University alumni and <b>full stack developer</b> with 6+ years of experience using <b>AWS</b>, I've learned that <i>any challenge can be overcome</i> with the right technologies, problem solving skills, and dedication.
      </p>

      <p>
        From <b>complex web applications</b> to <b>beautiful, responsive websites</b>, no project is unconquerable.
      </p>

      <p>
        I am currently employed at <a href="https://www.rfxtechnologies.com/" target="_blank"><b><span id="rfx-blue">RF</span><span id="rfx-red">X</span> <span id="rfx-white">Technologies</span></b></a>.
      </p>

      <a href="https://www.linkedin.com/in/a-jee-sieka-9b0400163/" class="link" target="_blank">
        <img class="social-icon" alt="LinkedIn" src="/static/images/linkedin.png">
      </a>
    </section>

    <section id="projects" class="container">

      <div class="section-header">
        <h4>
          <span>Projects</span>
        </h4>

        <p class="section-anchors">
          <a href="#web">Web</a> <a href="#games">Games</a>
        </p>
      </div>

      {% for category, projects in projects | groupby('category') %}
        <section class="container border-seperation" id="{{ categories[category].id }}">

          <div class="pure-g">
            <div class="pure-u-1 pure-u-md-1-2">
              <div style="position: sticky; top: 20px;">
                <div class="subsection-header">
                  <h5><span>{{ category }}</span></h5>
                </div>

                <p>{{ categories[category].description }}</p>

                <p>
                  {% for skill in categories[category].skills %}
                    <span class="skill-tag">{{ skill }}</span>
                  {% endfor %}
                </p>
              </div>
            </div>

            <div class="pure-u-1 pure-u-md-1-2">
              {% include "./_includes/components/project-showcase.njk" %}
            </div>
          </div>

        </section>
      {% endfor %}
    </section>

    <section id="gallery" class="container">
      <h4 class="section-header">
        <span>Gallery</span>
      </h4>

      <p>
        A collection of mockups and project photos.
      </p>

      <div class="pure-g">
        {% for gallery in galleries %}
          <div class="pure-u-1 pure-u-md-1-3 pure-u-lg-1-6">
            <a href="static/images/gallery/{{ gallery.image }}" target="_blank">
              <img class="gallery-link border-thin-selectable" alt="{{ gallery.title }}" src="static/images/gallery/{{ gallery.thumbnail }}">
            </a>
            <div class="hidden gallery">
              <img alt="{{ gallery.title }}" src="static/images/gallery/{{ gallery.thumbnail }}">
            </div>
          </div>
        {% endfor %}
      </div>
    </section>

  </article>
{% endblock %}

